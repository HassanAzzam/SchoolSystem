<Window x:Class="SchoolSystem.MainWindow"
        xmlns:controls="clr-namespace:SchoolSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Grid x:Name="MainGrid">
        <controls:TabList x:Name="Tabs" MouseDown="Tabs_MouseDown" HorizontalAlignment="Left" Width="1000" Height="90" VerticalAlignment="Top"/>
        <Rectangle Fill="#FF1F1F1F" HorizontalAlignment="Left" Height="5" Margin="0,90,0,0" VerticalAlignment="Top" Width="1000"/>
        <TextBlock x:Name="textBlock" Panel.ZIndex="1" TextAlignment="Center" Height="33" Margin="0,0,0,567" TextWrapping="Wrap" Text="x" VerticalAlignment="Bottom" Background="#FFD30000" Foreground="White" FontSize="21.333" HorizontalAlignment="Right" Width="56" MouseDown="Exit_Button" FontWeight="SemiBold" Padding="0"/>

    </Grid>
</Window>
